<%= link_to "Create New Product", new_admin_product_path, class: 'pull-right' %>

<div class="row">
	<% @products.each do |product| %>
		<div class="col-md-6">
			<div class="well">

				<div id="myCarousel<%= product.id %>" class="carousel slide" data-ride="carousel">
				  <ol class="carousel-indicators">
				  	<% product.photos.each_with_index do |photo, index| %>
					    <li data-target="#myCarousel<%= product.id %>" data-slide-to="0" class="<% if index.zero? %> active <% end %>"></li>
					  <% end %>
				  </ol>

				  <!-- Wrapper for slides -->
				  <div class="carousel-inner">
				    <% product.photos.each_with_index do |photo, index| %>
					    <div class="item <% if index.zero? %> active <% end %>">
					      <%= image_tag(photo.image_url, style: "width:100%;max-height:400px") %>
					    </div>
					  <% end %>
				  </div>

				  <!-- Left and right controls -->
				  <a class="left carousel-control" href="#myCarousel<%= product.id %>" data-slide="prev">
				    <span class="glyphicon glyphicon-chevron-left"></span>
				    <span class="sr-only">Previous</span>
				  </a>
				  <a class="right carousel-control" href="#myCarousel<%= product.id %>" data-slide="next">
				    <span class="glyphicon glyphicon-chevron-right"></span>
				    <span class="sr-only">Next</span>
				  </a>
				</div>

				<label><%= product.name %></label><br/>

				<label><%= product.price %></label>
			</div>
		</div>
	<% end %>
</div>